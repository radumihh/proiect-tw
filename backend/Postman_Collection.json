{
  "info": {
    "name": "Student Evaluation API",
    "description": "API pentru platforma de evaluare anonimă a proiectelor studenților",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Student",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@student.com\",\n  \"password\": \"password123\",\n  \"role\": \"student\"\n}"
            },
            "url": {"raw": "http://localhost:3000/auth/register"}
          }
        },
        {
          "name": "Register Professor",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Prof Smith\",\n  \"email\": \"prof@university.com\",\n  \"password\": \"password123\",\n  \"role\": \"professor\"\n}"
            },
            "url": {"raw": "http://localhost:3000/auth/register"}
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@student.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {"raw": "http://localhost:3000/auth/login"}
          }
        }
      ]
    },
    {
      "name": "Projects",
      "item": [
        {
          "name": "Create Project",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer YOUR_TOKEN_HERE"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Proiect Tehnologii Web\",\n  \"description\": \"Aplicație web pentru evaluare proiecte studenți\"\n}"
            },
            "url": {"raw": "http://localhost:3000/projects"}
          }
        },
        {
          "name": "Get All Projects",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer YOUR_TOKEN_HERE"}],
            "url": {"raw": "http://localhost:3000/projects"}
          }
        },
        {
          "name": "Get Project By ID",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer YOUR_TOKEN_HERE"}],
            "url": {"raw": "http://localhost:3000/projects/1"}
          }
        }
      ]
    },
    {
      "name": "Deliverables",
      "item": [
        {
          "name": "Create Deliverable",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer YOUR_TOKEN_HERE"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Etapa 1\",\n  \"deadline\": \"2025-12-20T23:59:59\",\n  \"videoUrl\": \"https://youtube.com/watch?v=example\"\n}"
            },
            "url": {"raw": "http://localhost:3000/projects/1/deliverables"}
          }
        },
        {
          "name": "Get Deliverables",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer YOUR_TOKEN_HERE"}],
            "url": {"raw": "http://localhost:3000/projects/1/deliverables"}
          }
        }
      ]
    },
    {
      "name": "Jury",
      "item": [
        {
          "name": "Assign Jury",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer YOUR_TOKEN_HERE"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"deliverableId\": 1,\n  \"evaluatorCount\": 5\n}"
            },
            "url": {"raw": "http://localhost:3000/jury/projects/1/assign-jury"}
          }
        },
        {
          "name": "Get Assigned Projects",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer YOUR_TOKEN_HERE"}],
            "url": {"raw": "http://localhost:3000/jury/projects"}
          }
        }
      ]
    },
    {
      "name": "Grades",
      "item": [
        {
          "name": "Submit Grade",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer YOUR_TOKEN_HERE"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"projectId\": 1,\n  \"deliverableId\": 1,\n  \"value\": 8.75\n}"
            },
            "url": {"raw": "http://localhost:3000/grades"}
          }
        },
        {
          "name": "Update Grade",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer YOUR_TOKEN_HERE"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"value\": 9.25\n}"
            },
            "url": {"raw": "http://localhost:3000/grades/1"}
          }
        },
        {
          "name": "Get Grades Summary (Professor)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer YOUR_PROFESSOR_TOKEN_HERE"}],
            "url": {"raw": "http://localhost:3000/grades/projects/1/summary"}
          }
        }
      ]
    }
  ]
}
